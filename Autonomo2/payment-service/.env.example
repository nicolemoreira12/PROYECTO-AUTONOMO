# ===========================================
# PAYMENT SERVICE - CONFIGURACIÓN DE ENTORNO
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL - Supabase)
DB_HOST=your_supabase_host
DB_PORT=6543
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DATABASE=postgres
DB_SSL=true

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Obtén estas claves en: https://dashboard.stripe.com/apikeys
# Usa las claves de TEST para desarrollo (empiezan con sk_test_ y pk_test_)
# Usa las claves LIVE para producción (empiezan con sk_live_ y pk_live_)

# Secret Key (Backend) - NUNCA expongas esta clave en el frontend
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Publishable Key (Frontend) - Se puede usar en el frontend de forma segura
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook Secret - Se obtiene al crear un endpoint de webhook en Stripe
# Dashboard > Developers > Webhooks > Add endpoint > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# PAYPAL CONFIGURATION (Opcional)
# ===========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_ACCESS_SECRET=tu-clave-secreta-access-super-segura-2024

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# FRONTEND URL (para redirecciones)
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# WEBHOOK INTERNAL SECRET
# ===========================================
WEBHOOK_SECRET=your_webhook_secret
