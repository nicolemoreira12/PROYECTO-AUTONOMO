# ===============================
# SUPABASE CONFIGURATION
# ===============================

# Reemplaza con tus credenciales de Supabase
# Importante: Solo usa ANON KEY en el frontend, nunca SERVICE KEY
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===============================
# API ENDPOINTS
# ===============================

# Backend APIs
VITE_API_BASE_URL=http://localhost:3000
VITE_AUTH_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:8000
VITE_AI_API_URL=http://localhost:3002

# Producción (descomentar cuando despliegues)
# VITE_API_BASE_URL=https://api.tudominio.com
# VITE_AUTH_API_URL=https://auth.tudominio.com
# VITE_WS_URL=wss://ws.tudominio.com
# VITE_AI_API_URL=https://ai.tudominio.com

# ===============================
# STRIPE CONFIGURATION (Frontend)
# ===============================

# Publishable Key (seguro exponer en frontend)
VITE_STRIPE_PUBLIC_KEY=pk_test_51xxxxx

# Producción
# VITE_STRIPE_PUBLIC_KEY=pk_live_51xxxxx

# ===============================
# PAYPAL CONFIGURATION (Frontend)
# ===============================

# Client ID (seguro exponer en frontend)
VITE_PAYPAL_CLIENT_ID=xxxxx

# Modo (sandbox o production)
VITE_PAYPAL_MODE=sandbox

# ===============================
# APP CONFIGURATION
# ===============================

VITE_APP_NAME=Marketplace Autónomo
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Plataforma de e-commerce para emprendedores

# ===============================
# FEATURES FLAGS
# ===============================

# Habilitar/deshabilitar features
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true

# ===============================
# GOOGLE MAPS (opcional)
# ===============================

VITE_GOOGLE_MAPS_API_KEY=AIzaSyxxxxxx

# ===============================
# ANALYTICS
# ===============================

# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Facebook Pixel
VITE_FB_PIXEL_ID=xxxxx

# ===============================
# SENTRY (Error Tracking)
# ===============================

VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
VITE_SENTRY_ENVIRONMENT=development

# ===============================
# SOCIAL MEDIA
# ===============================

VITE_FACEBOOK_APP_ID=xxxxx
VITE_INSTAGRAM_URL=https://instagram.com/tuempresa
VITE_TWITTER_URL=https://twitter.com/tuempresa

# ===============================
# STORAGE & CDN
# ===============================

# URLs para imágenes (Supabase Storage)
VITE_STORAGE_URL=https://YOUR_PROJECT_REF.supabase.co/storage/v1
VITE_PRODUCTOS_BUCKET=productos-images
VITE_AVATARES_BUCKET=user-avatars

# CDN (opcional, si usas Cloudflare o similar)
# VITE_CDN_URL=https://cdn.tudominio.com

# ===============================
# EXTERNAL SERVICES
# ===============================

# Servicio de geolocalización
VITE_GEOLOCATION_API=https://ipapi.co/json/

# Servicio de moneda/cambio
VITE_CURRENCY_API=https://api.exchangerate-api.com/v4/latest/USD

# ===============================
# ENVIRONMENT
# ===============================

VITE_NODE_ENV=development

# ===============================
# TIMEOUTS Y LÍMITES
# ===============================

VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_IMAGES_PER_PRODUCT=5

# ===============================
# OFFLINE MODE
# ===============================

VITE_ENABLE_OFFLINE_MODE=true
VITE_OFFLINE_CACHE_DURATION=3600000

# ===============================
# DEBUG
# ===============================

VITE_DEBUG_MODE=false
VITE_SHOW_CONSOLE_LOGS=true
