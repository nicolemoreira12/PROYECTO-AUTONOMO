# Variables de entorno para desarrollo

# ========== URLs DE SERVICIOS ==========
# Backend principal (Markplace)
VITE_API_URL=http://localhost:3000/api

# Auth Service (Autonomo2)
VITE_AUTH_URL=http://localhost:4000

# Payment Service (Autonomo2)
VITE_PAYMENT_URL=http://localhost:5000

# AI Orchestrator (Autonomo2)
VITE_AI_ORCHESTRATOR_URL=http://localhost:6000

# WebSocket Service (Python)
VITE_WEBSOCKET_URL=ws://127.0.0.1:8000

# GraphQL Endpoint
VITE_GRAPHQL_URL=http://localhost:3000/graphql

# n8n Webhooks
VITE_N8N_WEBHOOK_URL=http://localhost:5678

# ========== FEATURE FLAGS ==========
# Habilitar pagos reales (false = modo simulado)
VITE_ENABLE_REAL_PAYMENTS=false

# Habilitar chat con IA real
VITE_ENABLE_AI_CHAT=true

# Habilitar GraphQL (experimental)
VITE_ENABLE_GRAPHQL=false

# Habilitar WebSocket
VITE_ENABLE_WEBSOCKET=true

# ========== CONFIGURACIÓN DE PAGOS SIMULADOS ==========
# Delay de procesamiento en milisegundos
VITE_MOCK_PAYMENT_DELAY=2500

# Tasa de éxito de pagos simulados (0-100)
VITE_MOCK_PAYMENT_SUCCESS_RATE=95

# ========== CONFIGURACIÓN DE DESARROLLO ==========
# Modo debug
VITE_DEBUG=false

# Timeout de requests en milisegundos
VITE_REQUEST_TIMEOUT=30000
